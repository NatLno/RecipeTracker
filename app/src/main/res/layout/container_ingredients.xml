<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:id="@+id/ingredients_id"
        android:contentDescription=""
        android:layout_width="match_parent"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginTop="5sp"
        android:layout_height="75sp"
        android:elevation="10sp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:focusable="true"
        android:background="@drawable/background_ingredient">


        <ImageView
            android:layout_width="75sp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="#00000000"
            android:scaleType="centerCrop"
            android:src="@drawable/pates"/>

        <TextView
            android:id="@+id/nom_ingre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Lait"
            android:layout_marginStart="90sp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="left|center"/>

        <ImageButton
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_alignParentEnd="true"
            android:background="#00FFFFFF"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:onClick="addRemoveIngredient"
            android:scaleType="centerCrop"
            android:src="@drawable/add_ingredient_image" />
    </RelativeLayout>

</LinearLayout>